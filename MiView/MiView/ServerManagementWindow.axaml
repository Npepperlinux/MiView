<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MiView.ServerManagementWindow"
        Title="サーバー管理"
        Width="500"
        Height="400"
        WindowStartupLocation="CenterOwner"
        Background="#F0F0F0">
    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="SelectionBrush" Value="#86b300" />
            <Setter Property="SelectionForegroundBrush" Value="White" />
        </Style>
    </Window.Styles>
    
    <Grid Margin="10" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- ヘッダー -->
        <TextBlock Grid.Row="0" Text="登録済みサーバー一覧" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <!-- サーバーリスト -->
        <Border Grid.Row="1">
            <ListBox x:Name="serverListBox">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Background="#FFFFFF">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="5">
                                <TextBlock Text="{Binding InstanceName}"/>
                                <TextBlock Text="{Binding ApiKeyStatus}" FontSize="10" Foreground="#666666"/>
                            </StackPanel>
                            
                            <Button Grid.Column="1" Content="編集" Margin="5" Padding="10,3" Click="EditServer"/>
                            <Button Grid.Column="2" Content="削除" Margin="5" Padding="10,3"
                                    Background="#FFEBFF" Foreground="#D32F2F" BorderBrush="#F44336" Click="DeleteServer"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
        
        <!-- ボタン -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="サーバー追加" Margin="0,0,10,0" Padding="15,5" Click="AddServer"/>
            <Button Content="閉じる" Padding="15,5" Click="CloseWindow"/>
        </StackPanel>
    </Grid>
</Window>